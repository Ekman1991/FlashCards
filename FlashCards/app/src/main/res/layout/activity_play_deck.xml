<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="se.tda367.flashcards.PlayDeckActivity"
    android:id="@+id/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flip_button"
        android:id="@+id/flip_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="flipCard"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button3"
        android:onClick="backButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hard"
        android:id="@+id/hard"
        android:layout_marginBottom="30dp"
        android:background="#f02323"
        android:layout_above="@+id/flip_button"
        android:layout_toLeftOf="@+id/flip_button"
        android:layout_toStartOf="@+id/flip_button"
        android:singleLine="true"
        android:onClick="redDifficulty" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Okey"
        android:id="@+id/Okey"
        android:background="#f2de06"
        android:layout_alignTop="@+id/hard"
        android:layout_toRightOf="@+id/hard"
        android:layout_toEndOf="@+id/hard"
        android:onClick="yellowDifficulty" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EASY"
        android:id="@+id/Easy"
        android:background="#5ad20f"
        android:layout_alignTop="@+id/Okey"
        android:layout_toRightOf="@+id/Okey"
        android:layout_toEndOf="@+id/Okey"
        android:onClick="greenDifficulty" />

</RelativeLayout>
