<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="se.tda367.flashcards.CreateCardActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questionField"
        android:hint="@string/question_field"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:backgroundTint="#1f7b64" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answerField"
        android:hint="@string/answer_field"
        android:layout_below="@+id/questionField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:backgroundTint="#d93232"
        android:enabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_card"
        android:id="@+id/createCardButton"
        android:onClick="createCardButton"
        android:layout_below="@+id/answerField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:textColorHighlight="#090101"
        android:background="#25bb36" />
</RelativeLayout>
